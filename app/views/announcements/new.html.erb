<div class="wrapper">
  <%= render 'layouts/sidenavbar' %>
  <div class="main_content">
    <div class="header">
      <%= render 'layouts/navbar' %>
    </div>  

    <div class="info">
      <div class="well">
        <h3 class="fw-bold" style="margin-left: 10px;">New Announcement</h3>
        
        <%= form_with model: @announcement, local: true do |f| %>
          <table class="table">
            <tbody>
              <tr>
                <td class="pe-3"><%= f.label :title %></td>
                <td><%= f.text_field :title, class: "form-control w-50", style:"width:30%;" %></td>
              </tr>
              <tr>
                <td class="pe-3"><%= f.label :content %></td>
                <td><%= f.text_area :content, class: "form-control w-50", style:"width:30%;" %></td>
              </tr>
              <tr>
                <td colspan="2">
                  <%= link_to "Back", :back, class: "btn btn-primary" %>
                  <%= f.submit 'Create Announcement', class:"btn btn-primary" %>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>

